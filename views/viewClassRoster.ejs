<!doctype html>
<html lang="en">
<%- include widgets/header.ejs %>
<%- include widgets/mainNav.ejs %>

<div class="container py-8 my-8">
  <h1><%= Class.title %></h1>
    <div class="my-5">
      <div class="container">
          <div class="row">
              <div class="col-md-8 mx-auto px-4 py-5 my-3">
                  <h3><%= Class.title %></h3>
                  <hr>
                  <p> <%= Class.title %></p>
                  <p><b> Instructor:</b> <%= Class.instructorUID %><p>
                  <p> Location: <%= Class.location %><p>
                  <p> Dates: <%= Class.startDate %> - <%= Class.endDate%><p>
                  <p> Time: <%= Class.classTime %><p>
                  <p> Day of the Week: <%= Class.day %><p>
                  <p> Enroll by: <%= Class.deadline %><p>
                  <p> Spots Left: <%= Class.openSpots %> / <%=Class.totalSpots%> <p>
              </div>
          </div>
      </div>


        <table class="table table-striped">
            <thead class="sermon">
                <tr>
                    <td>Name</td>
                    <td>Graduation Year</td>
                    <td>Major</td>
                    <td>Email</td>
                    <td>Phone Number</td>
                </tr>
            </thead>
            <tbody>
                <% enrolledUsers.forEach(function(user) { %>
                    <tr>
                        <td>
                            <%= user.firstName %> <%= user.lastName %>
                        </td>
                        <td>
                            <%= user.grad %>
                        </td>
                        <td>
                          <%= user.major %>
                        </td>
                        <td>
                          <%= user.email %>
                        </td>
                        <td>
                          <%= user.phoneNumber %>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>

</div>
</html>
