<!doctype html>
<html lang="en">
  
<%- include widgets/header.ejs %>
<%- include widgets/mainNav.ejs %>
<div class="overlay" id="our-beliefs">
  <h1>Ministry Teams</h1>
</div>

<div class="row">
  <div class="col-md-8 mx-auto px-4 py-4 my-3">
    <% teams.forEach(function(Team){ %>
      <div class="card w-100 mb-4">
        <div class="card-body">
          <h4 class="card-title">
            <%= Team.name %>
          </h4>
          <p class="card-text mt-4">Leader:
            <%= Team.leader %>
          </p>
          <p class="card-text mt-4">
            Description: <%- Team.description %>
          </p>
        </div>
      </div>
      <% }); %>
  </div>
</div>

<%- include widgets/footer.ejs %>