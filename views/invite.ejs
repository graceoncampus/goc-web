<!doctype html>
<html lang="en">
<%- include widgets/header.ejs %>
<link rel="stylesheet" href="css/loader.css"/>
<%- include widgets/mainNav.ejs %>
<div class="container my-5 py-5">
	<div class="col-lg-4 col-md-7 mx-auto text-center">
		<h1 class="mb-2">Invite a new user</h1>
        <h6 class="mb-5">Enter the user's email to send them an invitation email.</h6>
        <form id="form" class="w-100">
            <div class="text-left form-group">
                <label for="email">Email</label>
                <input id="email" type="email" class="form-control" placeholder="Email" name="email" required>
            </div>
            <button id="invite" type="submit" class="btn btn-primary">Invite</button>
        </form>
    </div>
</div>
<%- include widgets/footer.ejs %>
<script>
$('#form').submit(function(e) {
  e.preventDefault();
  $('#invite').html('<div class="loader">Loading...</div>')
  $.post('/invitation', $('#form').serialize(), function(data) {
      $('#invite').addClass('success')
      $('#invite').html('Notified&nbsp;&nbsp;<i class="icon ion-ios-checkmark"></i>')
  })
})
</script>
</html>
